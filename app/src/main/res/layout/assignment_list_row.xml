<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="125dp"
    android:background="#d3d3d3">

    <TextView
    android:id="@+id/workerNameTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name: "
    android:textSize="15sp"
    android:textColor="@color/black"/>

    <TextView
        android:id="@+id/equipmentNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workerNameTv"
        android:text="Equipment: "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equipmentNameTv"
        android:text="Description: "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/assignmentStateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment State: "
        android:layout_below="@id/descriptionTv"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/deniedReasonTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/assignmentStateTv"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/assignmentStateTv"
        android:text="Delete"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="90dp"
        android:backgroundTint="@color/black"/>
</RelativeLayout>